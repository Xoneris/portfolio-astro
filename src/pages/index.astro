---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout>
	<header class="flex w-full justify-between items-end p-1 bg-slate-800 text-slate-200 border-b border-b-slate-400 fixed top-0">
		<div>
			<ul class="flex">
				<li>GitHub</li>
				<li>LinkedIn</li>
				<li>E-Mail</li>
			</ul>
		</div>
		<nav>
			<ul class="flex">
				<li class="text-center border border-transparent hover:text-slate-400"><a href="#About">About</a></li>
				<li class="text-center"><a href="#Skills">Skills</a></li>
				<li class="text-center"><a href="#Projects">Projects</a></li>
			</ul>
		</nav>
	</header>

	<main class="flex-grow text-slate-400">

		<section class="flex justify-center items-center bg-slate-900 h-screen" id="About">
			<img src="https://avatars.githubusercontent.com/u/153562085?v=4" alt="Kely picture" class="rounded-full w-52 h-52">
			<p>
				<span>Hi I'm Kely</span>
				<span></span>
			</p>

		</section>

		<section class="flex justify-center bg-slate-800 h-screen" id="Skills">

			<p>My Skills</p>
			<p>Technologies I have used</p>
		</section>

		<section class="flex justify-center bg-slate-700 h-screen" id="Projects">

			<p>Projects</p>
		</section>
	</main>

	<footer class="text-center p-1 bg-slate-950 text-slate-300 border-t border-t-slate-400">
		Footer
	</footer>
</Layout>

<style>

	
	li {
		display: block;
		width: 100px;
	}

	/* img {
		border-radius: 50%;
	} */
</style>

    <div class="flex justify-around items-center w-full lg:w-3/5 rounded-xl flex-col lg:flex-row">
        <Image src="/kely-avatar.png" alt="Kely picture" width={300} height={300} class="rounded-full p-2 border w-1/2 lg:w-1/3 hide"/>
        <div class="flex flex-col justify-around items-start w-4/5 sm:w-2/3 h-80 p-4">
